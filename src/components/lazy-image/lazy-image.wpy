<template>
  <div class="lazy-image">
    <div class="lazy-image-loading">
      <img :style="{'width':width}" src="./images/logo@2x.png" mode="aspectFit"/>
    </div>
    <div class="lazy-image-success {{isSuccess?' fade':''}}">
      <img :src="src" :mode="mode" @load="onHandleLoad"/>
    </div>
  </div>
</template>

<script type="text/ecmascript-6">
  import wepy from '@wepy/core';

  wepy.component({
    data: {
      isSuccess: false
    },
    props: {
      src: {
        type: String,
        default: ''
      },
      mode: {
        type: String,
        default: 'scaleToFill'
      },
      width: {
        type: String,
        default: ''
      }
    },
    events: {},
    watch: {},
    methods: {
      onHandleLoad() {
        this.isSuccess = true;
      }
    },
    created() {
    }
  });
</script>

