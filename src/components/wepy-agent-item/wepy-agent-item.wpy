<template>
  <div class="item">
    <div class="item-row row">
      <div class="item-col col-2">
        <div class="item-img">
          <lazy-image src="{{item.photo||defaultAgent}}" mode="aspectFill"/>
        </div>
      </div>
      <div class="item-col col-3">
        <div class="item-name">{{item.name}}</div>
      </div>
      <div class="item-col col-4">
        <div class="item-phone">{{item.tel}}</div>
      </div>
      <div class="item-col col-3">
        <span class="btn-update" @tap="onHandleUpdateAgent">修改</span> /
        <span class="btn-delete" @tap="onHandleDeleteAgent">删除</span>
      </div>
    </div>
  </div>
</template>

<script type="text/ecmascript-6">
  import wepy from '@wepy/core';
  import * as $routes from '../../router';
  import * as $config from '../../config';

  wepy.component({
    data: {
      defaultAgent: $config.DEFAULT_AGENT
    },
    props: {
      item: {
        type: Object,
        default: {}
      }
    },
    events: {},
    watch: {},
    methods: {
      onHandleDeleteAgent() {
        const params = {id: this.item.id};
        this.$parent.onHandleDeleteAgent(params);
      },
      onHandleUpdateAgent() {
        const query = '?item=' + JSON.stringify(this.item);
        wx.navigateTo({
          url: $routes.UPDATE_AGENT.path + query
        });
      },
      onHandleDetailAgent(id) {
        // wx.navigateTo({
        //   url: $routes.DETAIL_AGENT.path + '?id=' + id
        // });
      }
    },
    created() {
    }
  });
</script>

