<script type="text/ecmascript-6">
  import wepy from '@wepy/core';
  import store from '../../../store/index';
  import {mapState, mapActions} from '@wepy/redux';
  import * as controller from './controller';
  import * as $routes from '../../../router';
  import * as utils from '../../../utils';
  import Toast from '../../../mixins/toast';
  import Loading from '../../../mixins/loading';

  wepy.page({
    store,

    mixins: [Toast, Loading],

    data: {
      isDisable: false,
      params: {
        com_id: 1,
        name: '',
        tel: '',
        remarks: '',
        photo: '',
        detail: ''
      },
      urls: [],
      image: {
        count: 0
      }
    },

    computed: {
      ...mapState(controller.STATES)
    },

    methods: {
      ...mapActions(controller.ACTIONS),
      onHandleCheckEmpty() {
        const {name, tel} = this.params;
        let isBaseEmpty =
          (
            name &&
            tel
          );
        this.isDisable = isBaseEmpty;
        return {
          isBaseEmpty
        };
      },
      onHandleInsertAgent() {
        const isCheckEmpty = this.onHandleCheckEmpty();
        const {isBaseEmpty} = isCheckEmpty;
        if (!isBaseEmpty) {
          this.showToast('基本信息填写不完整');
        } else {
          this.onHandleSubmitAgent();
        }
      },
      onHandleSubmitAgent() {
        this.showLoading();
        if (this.urls.length) {
          this.exeAjaxInsertImage();
        } else {
          this.exeAjaxInsertAgent();
        }
      },
      onHandleShowImage(index) {
        wx.previewImage({
          current: this.urls[index],
          urls: this.urls
        });
      },
      onHandleDeleteImage(index) {
        this.urls.splice(index, 1);
      },
      onHandleInsertImage() {
        wx.navigateTo({
          url: $routes.AGENT.UPLOAD.path
        });
      },
      exeAjaxInsertAgent() {
        this.showLoading();
        const params = this.getParams();
        this.ajaxInsertAgent(params)
          .then((res) => {
            this.hideLoading();
            res = res || {};
            const {success} = res.payload;
            if (success) {
              this.showToast('经纪人添加成功');
              setTimeout(() => {
                wx.navigateBack({
                  delta: 1
                });
              }, 1000);
            } else {
              this.showToast('添加失败，请重试');
            }
          })
          .catch((err) => {
            this.hideLoading();
            this.showToast('添加失败，请重试');
            console.log(err);
          });
      },
      exeAjaxInsertImage() {
        let {count} = this.image;
        const filePath = this.urls[count];
        const params = {count, filePath};
        this.ajaxInsertImage(params)
          .then((res) => {
            res = res || {};
            const {success, data} = res.payload;
            if (success) {
              this.params.photo = data;
            }
            this.image.count++;
            if (this.image.count === this.urls.length) {
              this.exeAjaxInsertAgent();
            } else {
              this.exeAjaxInsertImage();
            }
            console.log(res);
          })
          .catch((err) => {
            this.showToast('第' + count + '张图片上传失败');
            this.image.count++;
            if (this.image.count === this.urls.length) {
              this.exeAjaxInsertAgent();
            } else {
              this.exeAjaxInsertImage();
            }
            console.log(err);
          });
      },
      getParams() {
        return this.params;
      }
    },

    onShow() {
      const {$path} = this.$app;
      if ($path) {
        const {path} = $path;
        this.urls = [path];
        this.$app.$path = null;
      }
    },

    onLoad() {
      const {com_id} = utils.getUser();
      this.params.com_id = com_id;
    }
  });
</script>

