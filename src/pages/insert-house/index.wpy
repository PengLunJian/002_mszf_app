            this.louceng.value &&
            this.zhuangxiu.value &&
            this.chuzufangshi.value &&
            this.leixing.value &&
            this.kanfangshijian.value
          );
        this.isAgenEmpty = this.agents.value;
        this.isTagsEmpty = this.tags.value;
        this.isDisable =
          !(
            this.isBaseEmpty &&
            this.isAgenEmpty &&
            this.isTagsEmpty
          );
      },
      exeAjaxInsertHouse() {
        this.showLoading();
        const params = this.getParams();
        this.ajaxInsertHouse(params)
          .then((res) => {
            this.hideLoading();
            res = res || {};
            const {success} = res.payload;
            if (success) {
              this.showToast('房源添加成功');
            } else {
              this.showToast('添加失败，请重试');
            }
            console.log(res);
          })
          .catch((err) => {
            this.hideLoading();
            this.showToast('添加失败，请重试');
            console.log(err);
          });
      },
