<script type="text/ecmascript-6">
  import wepy from '@wepy/core';
  import store from '../../store';
  import {mapState, mapActions} from '@wepy/redux';
  import * as controller from './controller';
  import Toast from '../../mixins/toast';
  import Loading from '../../mixins/loading';

  wepy.page({
    store,

    mixins: [Toast, Loading],

    data: {
      xiaoqu: '',
      price: '',
      huxing: {
        value: '',
        items: [
          ['1室', '2室', '3室', '4室', '5室'],
          ['0厅', '1厅', '2厅', '3厅', '4厅'],
          ['0卫', '1卫', '2卫', '3卫', '4卫']
        ],
        index: [0, 0, 0]
      },
      mianji: '',
      dizhi: {
        value: '',
        items: ['安徽省', '宣城市', '广德县']
      },
      xiangxidizhi: '',
      zhifu: {
        value: '',
        items: [
          [
            '押1', '押2', '押3', '押4', '押5', '押6'
          ],
          [
            '付1', '付2', '付3', '付4', '付5', '付6',
            '付7', '付8', '付9', '付10', '付11', '付12'
          ]
        ],
        index: [0, 0]
      },
      chaoxiang: {
        value: '',
        items: [
          '朝东',
          '朝西',
          '朝南',
          '朝北'
        ]
      },
      louceng: {
        value: '',
        items: [
          '低楼层',
          '中楼层',
          '高楼层'
        ]
      },
      zhuangxiu: {
        value: '',
        items: [
          '简装',
          '精装',
          '豪装'
        ]
      },
      chuzufangshi: {
        value: '',
        items: [
          '整租',
          '合租',
          '转租'
        ]
      },
      fangyuanjianjie: ''
    },

    computed: {
      ...mapState(controller.STATES)
    },

    methods: {
      ...mapActions(controller.ACTIONS),
      exeAjaxInsertHouse() {
        this.showLoading();
        const params = this.getParams();
        this.ajaxInsertHouse(params)
          .then((res) => {
            this.hideLoading();
            res = res || {};
            const {success} = res.payload;
            if (success) {
              this.showToast('房源添加成功');
            } else {
              this.showToast('添加失败，请重试');
            }
            console.log(res);
          })
          .catch((err) => {
            this.hideLoading();
            this.showToast('添加失败，请重试');
            console.log(err);
          });
      },
      onHandleHuXingChange(e) {
        const index = e.$wx.detail.value;
        const items = this.huxing.items;
        this.huxing.value = items[0][index[0]] + items[1][index[1]] + items[2][index[2]];
      },
      onHandleZhiFuChange(e) {
        const index = e.$wx.detail.value;
        const items = this.zhifu.items;
        this.zhifu.value = items[0][index[0]] + items[1][index[1]];
      },
      onHandleRegionChange(e) {
        const items = e.$wx.detail.value;
        this.dizhi.items = items;
        this.dizhi.value = items.join('、');
      },
      onHandleShowChaoXiang() {
        wx.showActionSheet({
          itemList: this.chaoxiang.items,
          success: (res) => {
            const value = this.chaoxiang.items[res.tapIndex];
            this.chaoxiang.value = value;
          },
          fail: (err) => {
            console.log(err);
          }
        });
      },
      onHandleShowLouCeng() {
        wx.showActionSheet({
          itemList: this.louceng.items,
          success: (res) => {
            const value = this.louceng.items[res.tapIndex];
            this.louceng.value = value;
          },
          fail: (err) => {
            console.log(err);
          }
        });
      },
      onHandleShowZhuangXiu() {
        wx.showActionSheet({
          itemList: this.zhuangxiu.items,
          success: (res) => {
            const value = this.zhuangxiu.items[res.tapIndex];
            this.zhuangxiu.value = value;
          },
          fail: (err) => {
            console.log(err);
          }
        });
      },
      onHandleShowChuZuFangShi() {
        wx.showActionSheet({
          itemList: this.chuzufangshi.items,
          success: (res) => {
            const value = this.chuzufangshi.items[res.tapIndex];
            this.chuzufangshi.value = value;
          },
          fail: (err) => {
            console.log(err);
          }
        });
      },
      onHandleInsertHouse() {
        this.exeAjaxInsertHouse();
      },
      getParams() {
        const params = {
          pic_url: [
            '/pic/a.jpg',
            '/pic/a.jpg'
          ],
          tags: '南北通透 精装修 随时看房',
          type: 3,
          status: 1,
          phone: '18130278679',
          title: this.fangyuanjianjie,
          price: this.price,
          total_price: 0,
          huxing: this.huxing.value,
          mianji: this.mianji,
          chaoxiang: this.chaoxiang.value,
          leixing: '小区',
          zhaungxiu: this.zhuangxiu.value,
          louceng: this.louceng.value,
          xiaoqu: this.xiaoqu,
          addr: this.xiangxidizhi,
          addr_sheng: this.dizhi.items[0],
          addr_shi: this.dizhi.items[1],
          addr_qu: this.dizhi.items[2],
          agency_phone: '18130278679',
          agency_com_name: '广进房产',
          kanfangshijian: '随时看房',
          zhifufangshi: this.zhifu.value,
          chuzufangshi: this.chuzufangshi.value
        };
        return params;
      }
    },

    onLoad() {
    }
  });
</script>

