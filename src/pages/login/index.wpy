<template>
  <div class="container">
    <div class="content">
      <div class="header"></div>
      <div class="body">
        <div class="context fade">
          <div class="login-container">
            <div class="login-content">
              <div class="login-header">
                <div class="login-title">欢迎，请登录</div>
              </div>
              <div class="login-body">
                <div class="form-group">
                  <label class="form-label iconfont icon-username"></label>
                  <input class="form-input" v-model="username" type="text" placeholder="请输入用户名"/>
                </div>
                <div class="form-group">
                  <label class="form-label iconfont icon-password"></label>
                  <input class="form-input" v-model="password" type="text" :password="true" placeholder="请输入密码"/>
                </div>
                <div class="form-group">
                  <div class="form-row row">
                    <div class="form-col col-6 flex">
                      <div class="form-check" @tap="onHandleCheck">
                        <div class="form-check-icon iconfont icon-right"
                             :class="{'checked':checked}"></div>
                        <label class="form-check-text">记住密码</label>
                      </div>
                    </div>
                    <div class="form-col col-6">
                      <label class="form-forget">忘记密码</label>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="btn btn-login" @tap="onHandleLogin">登录</div>
                </div>
              </div>
              <div class="login-footer"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="footer"></div>
    </div>
  </div>
</template>

<script type="text/ecmascript-6">
  import wepy from '@wepy/core';
  import store from '../../store';
  import {mapState, mapActions} from '@wepy/redux';
  import * as storage from '../../utils/storage';
  import * as controller from './controller';
  import * as $routes from '../../router';
  import Toast from '../../mixins/toast';
  import Loading from '../../mixins/loading';

  wepy.page({
    store,

    mixins: [Toast, Loading],

    data: {
      username: '',
      password: '',
      checked: false
    },

    computed: {
      ...mapState(controller.STATES)
    },

    methods: {
      ...mapActions(controller.ACTIONS),
      checkNotNull() {
        let result = false;
        if (!this.username) {
          this.showToast('请输入用户名');
        } else if (!this.password) {
          this.showToast('请输入密码');
        } else {
          result = true;
        }
        return result;
      },
      checkAccount() {
        if (this.checkNotNull()) {
          this.exeAjaxSelectLogin();
        }
      },
      onHandleCheck() {
        if (this.checked) {
          this.checked = false;
        } else {
          this.checked = true;
        }
      },
      onHandleLogin() {
        this.checkAccount();
      },
      exeAjaxSelectLogin() {
        this.showLoading();
        const params = {
          account: this.username,
          pwd: this.password
        };
        this.ajaxSelectLogin(params)
          .then((res) => {
            this.hideLoading();
            res = res || {};
            const {error, success, data} = res.payload;
            if (success) {
              const {at, rt, user} = data;
              storage.setItem('accessToken', at);
              storage.setItem('refreshToken', rt);
              if (this.checked) {
                storage.setItem('user', user);
              } else {
                storage.removeItem('user', user);
              }
              wx.redirectTo({
                url: $routes.INDEX.path
              });
            } else {
              const {errorMessage} = error || {};
              const message = errorMessage || '登录失败，请重试';
              this.showToast(message);
            }
            console.log(res);
          })
          .catch((err) => {
            this.hideLoading();
            this.showToast('服务器连接失败');
            console.log(err);
          });
      }
    },

    onLoad() {
      const user = storage.getItem('user');
      const {account, pwd} = user || {};
      if (account && pwd) {
        this.username = account;
        this.password = pwd;
        this.checked = true;
      }
    }
  });
</script>

